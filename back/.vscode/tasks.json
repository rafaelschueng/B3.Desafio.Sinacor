{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate lcov file",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "/p:CollectCoverage=true /p:CoverletOutputFormat=lcov /p:CoverletOutput=lcov.info",
                
            ],
            "problemMatcher": []
        },
        {
            "label": "Generate coverage stats",
            "command": "reportgenerator",
            "type": "shell",
            "args": [
                "-reports:${workspaceFolder}/B3.Desafio.Sinacor.Tests/lcov.info",
                "-targetdir:${workspaceFolder}/B3.Desafio.Sinacor.Tests/coverage_status"
            ],
            "problemMatcher": []
        }
    ]
}